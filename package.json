{
  "name": "mutafriches",
  "version": "1.4.0",
  "private": true,
  "description": "Monorepo pour l'analyse de mutabilit√© des friches urbaines",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "start": "node apps/api/dist/src/main",
    "scalingo-postbuild": "pnpm install --frozen-lockfile && pnpm --filter shared-types build && pnpm --filter api build",
    "build": "pnpm --filter shared-types build && pnpm --filter api build",
    "build:shared": "pnpm --filter shared-types build",
    "start:dev": "concurrently --kill-others --names \"API,UI\" --prefix-colors \"cyan,magenta\" \"pnpm:dev:api\" \"pnpm:dev:ui\"",
    "dev:api": "pnpm --filter api start:dev",
    "dev:ui": "pnpm --filter ui dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "db:start": "cd apps/api && docker-compose up -d postgres",
    "db:stop": "cd apps/api && docker-compose down",
    "db:reset": "cd apps/api && docker-compose down -v && docker-compose up -d postgres",
    "db:push": "cd apps/api && pnpm drizzle-kit push",
    "db:push:force": "cd apps/api && pnpm drizzle-kit push --force",
    "db:studio": "cd apps/api && pnpm drizzle-kit studio",
    "db:generate": "cd apps/api && pnpm drizzle-kit generate",
    "db:migrate": "cd apps/api && pnpm drizzle-kit migrate",
    "db:introspect": "cd apps/api && pnpm drizzle-kit introspect",
    "db:bpe:import": "pnpm --filter api run db:bpe:import",
    "db:transport-stops:import": "pnpm --filter api run db:transport-stops:import",
    "validate": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "fresh": "rm -rf node_modules apps/*/node_modules pnpm-lock.yaml && pnpm install && pnpm start:dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.7.4",
    "typescript": "^5.7.3"
  }
}
