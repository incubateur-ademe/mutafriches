{
  "name": "mutafriches-api",
  "version": "1.0.0",
  "description": "API pour l'analyse de mutabilit√© des friches urbaines",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "nest build",
    "ci": "pnpm run typecheck && pnpm run lint && pnpm run test",
    "clean": "rm -rf dist coverage node_modules",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "db:dev:seed:mock:analytics": "ts-node -r tsconfig-paths/register src/shared/scripts/seed.analytics.mock.ts",
    "db:seed:mock:analytics": "node dist/src/shared/scripts/seed.analytics.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main.js",
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:ui\"",
    "dev:api": "pnpm run start:dev",
    "dev:ui": "cd ui && pnpm run dev",
    "build:ui": "cd ui && pnpm run build",
    "build:all": "pnpm run build && pnpm run build:ui",
    "install:all": "pnpm install && cd ui && pnpm install",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:verbose": "cross-env VERBOSE=true vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutability": "vitest run mutability-calculation",
    "test:mutability:verbose": "cross-env VERBOSE=true vitest run mutability-calculation",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config vitest.config.ts test/"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.14.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@types/express-session": "^1.18.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "express-session": "^1.18.2",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4"
  }
}
