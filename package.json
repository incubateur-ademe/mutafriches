{
  "name": "mutafriches",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo pour l'analyse de mutabilitÃ© des friches urbaines",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "concurrently --kill-others --names \"API,UI\" --prefix-colors \"cyan,magenta\" \"pnpm:dev:api\" \"pnpm:dev:ui\"",
    "dev:api": "pnpm --filter api dev:api",
    "dev:ui": "pnpm --filter ui dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter api build",
    "build:ui": "pnpm --filter ui build",
    "start": "pnpm --filter api start",
    "start:dev": "pnpm --filter api start:dev",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter api test",
    "test:ui": "pnpm --filter ui test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:start": "pnpm --filter api db:start",
    "db:stop": "pnpm --filter api db:stop",
    "db:reset": "pnpm --filter api db:reset",
    "db:push": "pnpm --filter api db:push",
    "db:studio": "pnpm --filter api db:studio"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.34.0",
    "@types/node": "^22.10.7",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
