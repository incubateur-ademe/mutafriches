{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "../public/**/*",
        "outDir": "dist/public"
      },
      {
        "include": "ui/components/*.html",
        "outDir": "dist/src"
      },
      {
        "include": "ui/layouts/*.html",
        "outDir": "dist/src"
      },
      {
        "include": "ui/pages/*.html",
        "outDir": "dist/src"
      },
      {
        "include": "ui/**/*.css",
        "outDir": "dist/src"
      }
    ]
  }
}
